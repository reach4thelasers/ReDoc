    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome Launch",
            "type": "chrome",
            "request": "launch",
            "port": 9222,
            "url": "http://localhost:9000",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "trace": "verbose"
        },
        {
            "name": "Launch Edge localhost with sourcemaps",
            "type": "edge",
            "request": "launch",
            "url": "http://localhost:9000",
            "sourceMaps": true
        },
        {
            "name": "Attach",
            "type": "edge",
            "request": "attach",
            "port": 9222
        }
    ]
}